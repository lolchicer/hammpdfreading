<UserControl x:Class="HammPdfReading.Gui.WriteIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HammPdfReading.Gui"
             mc:Ignorable="d" >
    <Grid>
        <DockPanel>
            <TextBlock x:Name="FileNameBlock" DockPanel.Dock="Left"></TextBlock>
            <TextBlock x:Name="IsDoneBox" DockPanel.Dock="Right" HorizontalAlignment="Right"></TextBlock>
        </DockPanel>
    </Grid>
</UserControl>
