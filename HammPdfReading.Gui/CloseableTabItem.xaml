<UserControl x:Class="Infor.HammPdfReading.Gui.CloseableTabItemHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Infor.HammPdfReading.Gui"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DockPanel>
            <TextBlock x:Name="NameBlock" DockPanel.Dock="Left"></TextBlock>
            <Button DockPanel.Dock="Right" Click="CloseButton_Click"></Button>
        </DockPanel>
    </Grid>
</UserControl>
